<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create User</a>
    </div>
    <div>
        <form action="/update-user" method="post">
            <fieldset>
                <div class="hidden">
                    <label>Id: </label>
                    <input type="id" name="userId" id="id" value="<%= userEdit.id %>">
                </div>
                <div>
                    <label>Email: </label>
                    <input type="email" name="email" id="email" value="<%= userEdit.email %>">
                </div>
                <div>
                    <label>Name: </label>
                    <input type="text" name="name" id="name" value="<%= userEdit.name %>">
                </div>
                <div>
                    <label>City: </label>
                    <input type="text" name="city" id="city" value="<%= userEdit.city %>">
                </div>
                <br>
                <div>
                    <input type="submit" value="Submit">
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>